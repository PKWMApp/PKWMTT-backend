<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Log directory and file properties -->
    <property name="LOG_DIR" value="logs" />
    <property name="LOG_FILE" value="app.log" />
    <property name="LOG_PATH" value="${LOG_DIR}/${LOG_FILE}" />

    <!-- Register built-in color/Highlight converters -->
    <conversionRule conversionWord="highlight"
                    converterClass="org.pkwmtt.global.config.HighlightingCompositeLogConverter"/>

    <!-- Console appender: logs INFO+ with colors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- enable ANSI codes for real terminals -->
        <withJansi>false</withJansi>
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- Rolling file appender: ERROR and above, daily rotation compressed, keep 30 days -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}</file>
        <append>true</append>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rotated files, gz compressed -->
            <fileNamePattern>${LOG_DIR}/app.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <!-- optional total size cap (uncomment to enable) -->
            <!-- <totalSizeCap>1GB</totalSizeCap> -->
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- Root logger: DEBUG to console (filtered to INFO), ERROR to file -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
